---
import BaseLayout from '../../layouts/baselayout.astro';
const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true })); // importa todos os posts
const tags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())]; // importa todas as tags, junta-as num unico array e filtra para nao haver repetidas
const pageTitle = "Tag Index";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div> <!-- faz um loop nas tags e cria links para as tags -->
</BaseLayout>


<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style> <!-- estilo -->