---
import BaseLayout from './baselayout.astro'; // importa a layout 
const { frontmatter } = Astro.props;  // vai buscar frontmatter
---

<BaseLayout pageTitle={frontmatter.title}> 
  <p><em>{frontmatter.description}</em></p>
  <p>{frontmatter.pubDate.toString().slice(0,10)}</p> <!-- busca variaveis da frontmatter e usa (para maior acessibilidade) -->

  <p>Written by: {frontmatter.author}</p>

  <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

  <div class="flex flex-wrap">
    {frontmatter.tags.map((tag: string) => (
      <p class="m-1 border border-dotted border-gray-400 rounded-md px-4 py-2 text-[1.15em] bg-[#F8FCFD]"><a href={`/tags/${tag}`} class="text-blue-600">{tag}</a></p>
    ))}
  </div> <!-- vai buscar tudo na classe tags -->

  <slot />
</BaseLayout>
